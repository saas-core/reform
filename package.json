{
  "name": "@saascore/forms",
  "version": "0.0.2",
  "description": "Form wrapper around Formik",
  "keywords": [
    "React"
  ],
  "author": "Abhi Aiyer <aaiyer@csod.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "repository": {
    "type": "git",
    "url": "https://aaiyer@bitbucket.csod.com/scm/neon/helium.git"
  },
  "scripts": {
    "test": "jest --env=jsdom --verbose=false",
    "test:watch": "jest --env=jsdom --verbose=false --watch",
    "prepare": "rimraf ./lib && tsc",
    "version": "standard-version"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/__tests__/*.test.(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/react": "^16.8.1",
    "emotion": "^10.0.7",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-testing-library": "^5.2.3",
    "rimraf": "^2.6.3",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.3.1"
  },
  "peerDependencies": {
    "emotion": "10.0.7",
    "react": "16.8.0-alpha.1",
    "react-dom": "16.8.0-alpha.1"
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^2.5.0",
    "formik": "^1.3.2"
  }
}
